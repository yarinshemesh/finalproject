<Window x:Class="MovieLandByYarin.CustomersHandle"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MovieLandByYarin"
        mc:Ignorable="d"
       Title="Ticket" Height="700" Width="800" Loaded="Window_Loaded" Unloaded="Window_Unloaded">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <DataGrid HorizontalAlignment="Left" Height="518" VerticalAlignment="Top" Width="663" Margin="65,117,0,0" Grid.ColumnSpan="3" Grid.RowSpan="3" x:Name="dataGrid"/>
        <Button x:Name="add_t"  Content="ADD" HorizontalAlignment="Left" VerticalAlignment="Top" Width="115" RenderTransformOrigin="0.955,0.919" Margin="30,26,0,0" Height="65" FontSize="26" Click="add_costumer"/>
        <Button Content="UPDATE"  HorizontalAlignment="Left" VerticalAlignment="Top" Width="118" Grid.Column="2" Margin="113,26,0,0" Height="65" FontSize="26" Click="save_data"/>

    </Grid>
</Window>
